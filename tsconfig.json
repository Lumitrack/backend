{
  "compilerOptions": {
    // Caminhos e Diretórios
    "baseUrl": "./src",
    //"rootDir": "./src",
    "outDir": "./dist",

    // Configuração de Módulos (Node.js Moderno)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    
    // Interoperabilidade
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Tipagem Estrita
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Tipos Globais (Importante para Jest e Node)
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "**/*.spec.ts", 
    "**/*.test.ts"
  ]
}